<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lifejodi">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".landingpage.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.activity.LoginActivity" />
        <activity android:name=".login.activity.RegisterActivity" />
        <activity android:name=".home.activity.HomeActivity" />
        <activity android:name=".login.activity.ForgotPasswordActivity"/>
        <activity android:name=".InboxActivity"/>
        <activity android:name=".NotificationActivity"/>
        <activity android:name=".event.activity.EventsActivity"/>
        <activity android:name=".event.activity.EventRegistrationActivity"/>
        <activity android:name=".PaymentActivity"/>
        <activity android:name=".ProfileActivity"/>
        <activity android:name=".VideoCallActivity"/>
        <activity android:name=".SearchActivity"/>
    </application>

</manifest>