<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <com.lifejodi.utils.customfonts.CustomTextBeatles
            android:layout_marginTop="10dp"
            android:id="@+id/text_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Details"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <include layout="@layout/layout_edit_basic_details"
            android:id="@+id/layout_basic_details"></include>
        <include layout="@layout/layout_edit_family_details"
            android:id="@+id/layout_family_details"></include>
        <include layout="@layout/layout_edit_professional_details"
            android:id="@+id/layout_professional_details"></include>
        <include layout="@layout/layout_edit_religious_information"
            android:id="@+id/layout_religious_details"></include>

        <com.lifejodi.utils.customfonts.CustomButtonBeatles
            android:id="@+id/button_edit_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="Save"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>