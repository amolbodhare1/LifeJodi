                                android:id="@+id/text_searchid_result_dob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11 Nov 1987"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Catholic"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender : "

                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>

                        <LinearLayout
