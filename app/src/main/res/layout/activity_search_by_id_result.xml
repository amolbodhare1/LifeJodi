                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Marital status : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_maritalstatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caste : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_caste"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
