                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_dosham"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Physical status : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_physicalstatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Willing to marry other caste : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_marryothercaste"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"
                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>

                        <com.lifejodi.utils.customfonts.CustomTextBeatles
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Professional Information"
                            android:textSize="15dp"
                            android:textColor="@color/blue"/>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Education : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_education"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"
                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Occupation : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_occupation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"
                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Working as : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_workingas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"
                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Annual income : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"
                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>

                        <com.lifejodi.utils.customfonts.CustomTextBeatles
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Family"
                            android:textSize="15dp"
                            android:textColor="@color/blue"/>

                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Family type : "
                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_familytype"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"
                                android:textColor="@color/dark_grey"/>
                        </LinearLayout>
                        <LinearLayout
