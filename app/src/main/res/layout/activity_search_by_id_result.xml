                                android:textSize="14dp"/>
                            <com.lifejodi.utils.customfonts.CustomTextBeatles
                                android:id="@+id/text_searchid_result_phnumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="14dp"

