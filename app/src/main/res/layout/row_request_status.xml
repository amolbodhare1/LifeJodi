<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:id="@+id/card_request_status">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_request_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left|center_vertical">

                <com.lifejodi.utils.customfonts.CustomTextBeatles
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ronak Shinde"
                    android:textSize="15dp"
                    android:id="@+id/text_request_name"
                    android:textColor="@color/text_color_dark"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.lifejodi.utils.customfonts.CustomTextBeatles
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age : "
                        android:textSize="12dp"
                        android:textColor="@color/text_color_grey"/>

                    <com.lifejodi.utils.customfonts.CustomTextBeatles
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27"
                        android:id="@+id/text_request_age"
                        android:textSize="14dp"
                        android:textColor="@color/text_color_dark"/>

                </LinearLayout>

                <com.lifejodi.utils.customfonts.CustomTextBeatles
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Sent"
                    android:textSize="15dp"
                    android:id="@+id/text_request_status"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:id="@+id/layout_accept"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_accept_request"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Accept"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"/>

                <TextView
                    android:id="@+id/text_reject_request"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Reject"
                    android:gravity="center"
                    android:background="@drawable/button_background_red"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>