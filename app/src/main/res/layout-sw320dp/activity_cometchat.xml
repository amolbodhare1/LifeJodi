<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    tools:context=".CometChatDemo">

    <Button
        android:id="@+id/btnLaunchCometChat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Launch CometChat" />

    <Button
        android:id="@+id/btnLaunchUser"
        android:layout_below="@id/btnLaunchCometChat"
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Launch For User" />

    <Button
        android:id="@+id/btnLaunchGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLaunchUser"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="Launch For Group" />


    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progressWheel"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        wheel:matProg_barColor="@color/colorAccent"
        wheel:matProg_progressIndeterminate="true"
        />

    <!--wheel:matProg_barColor="@color/colorAccent"
        wheel:matProg_progressIndeterminate="true" -->

</android.support.design.widget.CoordinatorLayout>
