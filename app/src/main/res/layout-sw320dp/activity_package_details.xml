<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_packages_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_package_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25"
        android:orientation="vertical">

            <TextView
                android:id="@+id/text_package_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gold Package"
                android:textSize="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_package_details_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_20"
                android:text="5200 / "
                android:textColor="@color/pink" />

            <TextView
                android:id="@+id/text_package_details_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Months"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/dp_18"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_package_details_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gold Package"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/dark_grey"
            />

    </LinearLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_40"
                app:layout_anchor="@+id/card_package_details"
                app:layout_anchorGravity="bottom|center">
                <TextView
                    android:id="@+id/text_buy_package_now"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:text="Buy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_18"
                    android:background="@drawable/button_background"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    />
            </android.support.v7.widget.CardView>
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>
</LinearLayout>