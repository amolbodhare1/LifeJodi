<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lifejodi.login.activity.LoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_40"
        android:gravity="center">

    <com.lifejodi.utils.customfonts.CustomTextBeatles
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textColor="@color/blue"
        android:textSize="@dimen/dp_25"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.lifejodi.utils.customfonts.CustomEditBeatles
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="LifeJodi Id/email/mobile no."
                    android:inputType="text"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/dp_14" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:passwordToggleEnabled="true">
                <com.lifejodi.utils.customfonts.CustomEditBeatles
                    android:layout_gravity="center_vertical"
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:hint="Password"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/dp_14"
                    android:background="@null"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"></LinearLayout>

    </LinearLayout>

    <com.lifejodi.utils.customfonts.CustomTextBeatles
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="Forgot password?"
        android:textColor="@color/pink"
        android:textSize="@dimen/dp_14" />

    <com.lifejodi.utils.customfonts.CustomButtonBeatles
        android:id="@+id/button_login"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        android:background="@drawable/button_background"/>

    <com.lifejodi.utils.customfonts.CustomTextBeatles
        android:id="@+id/text_login_via_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Login via OTP"
        android:textColor="@color/pink"
        android:textSize="@dimen/dp_14" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>
        <com.lifejodi.utils.customfonts.CustomTextBeatles
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="OR"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/dp_14" />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"/>
    </LinearLayout>

    <RelativeLayout
        android:elevation="2dp"
        android:id="@+id/layout_fb_login"
        android:background="@drawable/button_fb_background"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/facebook_logo"
            android:tint="@color/white"/>
        <com.lifejodi.utils.customfonts.CustomTextBeatles
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with facebook"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"

            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.lifejodi.utils.customfonts.CustomTextBeatles
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/dp_14"

            android:layout_centerInParent="true"/>
        <com.lifejodi.utils.customfonts.CustomTextBeatles
            android:id="@+id/text_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_15"

            android:layout_centerInParent="true"/>
    </LinearLayout>

</LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:background="#aaffffff"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar13" />
    </RelativeLayout>
</RelativeLayout>